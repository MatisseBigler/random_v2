    <script>
        // Ta liste de stratégies
        const strategies = [
            "Sort dehors",
            "Utilise une vieille idée",
            "Que ferait ton ami ?",
            "Fais-le à l'envers",
            "Demande à ton corps",
            "Change d'instrument",
            "La répétition est une forme de changement",
            "N'aie pas peur de faire des clichés",
            "Accentue les défauts",
            "Honore ton erreur comme une intention cachée",
            "Découpe",
            "Travaille à une vitesse différente"
        ];

        // 1. Sélectionne l'élément H1
        const strategyElement = document.getElementById('strategy-text');

        // 2. Choisit un index (un numéro) au hasard
        const randomIndex = Math.floor(Math.random() * strategies.length);

        // 3. Récupère la phrase correspondante
        const randomStrategy = strategies[randomIndex];

        // 4. Affiche cette phrase dans le H1
        strategyElement.textContent = randomStrategy;
    </script>

